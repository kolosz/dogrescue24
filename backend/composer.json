{
    "name": "dogrescue24/backend",
    "description": "Backend f√ºr die DogRescue24 Plattform",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.5",
        "doctrine/orm": "^2.16",
        "doctrine/dbal": "^3.7",
        "doctrine/annotations": "^2.0",
        "symfony/cache": "^6.3",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "openapi-validator/openapi-validator": "^1.0",
        "openapi-generator/openapi-generator-cli": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "api:validate": "openapi-validator validate openapi.yaml",
        "api:generate": "openapi-generator-cli generate -i openapi.yaml -g php-slim4 -o ./generated"
    }
} 